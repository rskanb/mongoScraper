<div class="container-fluid article-container">
{{#if article}}
   {{#each article}}
   <div class="card">
     <div class="card-header">
     <h3><a class="article-link" target="_blank" rel="noopener noreferrer" href={{link}}>{{title}}</a>
     <a class="btn btn-danger delete float-right" data-_id={{_id}}>Delete Article</a>
     <a class="btn btn-info notes float-right" data-_id={{_id}} data-toggle="modal" data-target="#articledata-modal">Article Notes</a>
     </h3>
   </div>
   <div class="card-body"><p>{{description}}</p></div>
   </div>
   <div id="articledata-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="model-title">{{_id}}</h2>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          <label for="notetitle">Title</label>
          <input type="text" id="notetitle" class="form-control">
          <br>
          <label for="notetext">Text</label>
          <textarea type="textarea" id="notetext" class="form-control"></textarea>
          <br>
          <div>
            <h2>{{note.title}}</h2>
            <br>
            <p>{{note.text}}</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default" data-dismiss="modal" id="notesubmit">Submit</button>
        </div>
      </div>
    </div>
</div>
   {{/each}} 
{{else}}
  <div class="card">
    <div class="card-header">
    <h3>Uh Oh. Looks like we don't have any new articles.</h3>
  </div>
  <div class="card-body"></div>
  </div>
{{/if}}
</div>




